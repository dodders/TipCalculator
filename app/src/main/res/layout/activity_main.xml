<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="25dp" android:orientation="horizontal">
        <TextView android:text="@string/totalamt"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/totalAmt"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp">
        <TextView android:text="Tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="#2196f3"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="25dp"
        android:orientation="horizontal" android:layout_marginTop="20dp">
        <TextView android:text="15%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/tip15"
            android:layout_width="60dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:background="#e3f2fd"
            android:layout_height="wrap_content" />
        <TextView android:text="18%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/tip18"
            android:layout_width="60dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:background="#e3f2fd"
            android:layout_height="wrap_content" />
        <TextView android:text="20%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/tip20"
            android:layout_width="60dp"
            android:background="#e3f2fd"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp">
        <TextView android:text="Totals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:background="#2196f3"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="25dp" android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView android:text="15%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/total15"
            android:layout_width="60dp"
            android:textAlignment="textEnd"
            android:background="#e3f2fd"
            android:layout_height="wrap_content" />
        <TextView android:text="18%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/total18"
            android:layout_width="60dp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:background="#e3f2fd"
            android:layout_height="wrap_content" />
        <TextView android:text="20%:"
            android:layout_width="40dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/total20"
            android:layout_width="60dp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:background="#e3f2fd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="30dp">
        <Button android:id="@+id/btnNum1"
                android:text="1"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum2"
                android:text="2"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum3"
                android:text="3"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnDel"
                android:text="&lt;"
                android:layout_width="70dp"
                android:layout_height="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="30dp">
        <Button android:id="@+id/btnNum4"
                android:text="4"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum5"
            android:text="5"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <Button android:id="@+id/btnNum6"
                android:text="6"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnClr"
                android:text="CLR"
                android:layout_width="70dp"
                android:layout_height="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="30dp">
        <Button android:id="@+id/btnNum7"
                android:text="7"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum8"
                android:text="8"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum9"
                android:text="9"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnPoint"
                android:text="."
                android:layout_width="70dp"
                android:layout_height="70dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="30dp">
        <Button android:id="@+id/btnNumBlank1"
                android:text=""
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNum0"
                android:text="0"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        <Button android:id="@+id/btnNumBlank2"
                android:text=""
                android:layout_width="70dp"
                android:layout_height="70dp" />
    </LinearLayout>

</LinearLayout>
